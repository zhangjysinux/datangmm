1.进入交叉编译环境
	(1)sdk
	(2)sb2 -R
        (3)如果以下库被装过 需先执行make uninstall ; make clean
2.编译yasm
cd lib/yasm-1.3.0
./configure --prefix=/usr  &&make clean && make && make install && echo ready

3.编译libiconv
./configure --prefix=/usr  &&make clean && make && make install && echo ready
./configure --prefix=/home/wangcy/SyberOS-SDK/jail/opt/cross/armv7tnhl-meego-linux-gnueabi/sys-root/usr/  &&make clean && make && make install && echo ready


4.编译v4l2
cd lib/v4l-utils-1.8.1
./configure --prefix=/usr  &&make clean && make && make install && echo ready

./configure --prefix=/home/wangcy/SyberOS-SDK/jail/opt/cross/armv7tnhl-meego-linux-gnueabi/sys-root/usr/  &&make clean && make && make install && echo ready

cp /srv/syberos/targets/syberos-target-armv7tnhl/usr/lib/pkgconfig/libv4l2.pc ~/SyberOS-SDK/jail/usr/lib/pkgconfig/
cp /srv/syberos/targets/syberos-target-armv7tnhl/usr/lib/pkgconfig/libv4l2rds.pc ~/SyberOS-SDK/jail/usr/lib/pkgconfig/

5.编译SDL
cd lib/SDL2-2.0.4
./configure --enable-video-opengl=no --enable-video-opengles=no --enable-video-opengles1=no --enable-video-opengles2=no --prefix=/usr &&  make clean && make && make install && echo ready

./configure --enable-video-opengl=no --enable-shared=no --enable-static=yes --enable-video-opengles=no --enable-video-opengles1=no --enable-video-opengles2=no --prefix=/usr &&  make clean && make && make install && echo ready

./configure --enable-video-opengl=no --enable-video-opengles=no --enable-video-opengles1=no --enable-video-opengles2=no --prefix=/home/wangcy/SyberOS-SDK/jail/opt/cross/armv7tnhl-meego-linux-gnueabi/sys-root/usr/ &&  make clean && make && make install && echo ready

cp /srv/syberos/targets/syberos-target-armv7tnhl/usr/lib/pkgconfig/sdl2.pc ~/SyberOS-SDK/jail/usr/lib/pkgconfig/
6.编译x264
cd lib/x264-snapshot-20160218-2245
./configure --enable-static --disable-shared --enable-pic --prefix=/usr && make clean && make && make install && echo ready

7.编译ffmpeg
cd lib/ffmpeg-2.5.11
./configure --enable-shared --disable-static --enable-memalign-hack --enable-libx264 --enable-gpl --prefix=/usr  && make clean && make && make install && echo ready

./configure --enable-shared --disable-static --enable-memalign-hack --enable-libx264 --enable-gpl --prefix=/home/wangcy/SyberOS-SDK/jail/opt/cross/armv7tnhl-meego-linux-gnueabi/sys-root/usr/ && make install && echo ready

8.编译pjsip
cd lib/pjproject-2.4.5
pjlib/include/pj/config_site.h
pjmedia/src/pjmedia-videodev/v4l2_dev.c

CFLAGS="-O3 -fPIC" ./configure --disable-openh264 --prefix=/usr &&  make clean && make dep && make && make install && echo ready

CFLAGS="-O3 -fPIC" ./configure --disable-openh264 --prefix=/home/wangcy/SyberOS-SDK/jail/opt/cross/armv7tnhl-meego-linux-gnueabi/sys-root/usr/ &&  make clean && make dep && make && make install && echo ready

cp /srv/syberos/targets/syberos-target-armv7tnhl/usr/lib/pkgconfig/libpjproject.pc ~/SyberOS-SDK/jail/usr/lib/pkgconfig/


vidgui:
sopconfig.xml <uses-permission syberos:name="syberos.permission.ACCESS_CAMERA" />
cp /srv/syberos/targets/syberos-target-armv7tnhl/usr/lib/libuu* ~/SyberOS-SDK/jail/usr/lib




拷到手机
ssh developer@192.168.100.100
cd abc
rm -rf *

cd /srv/syberos/targets/syberos-target-armv7tnhl/usr/lib
scp libSDL*  developer@192.168.100.100:abc
scp libav* developer@192.168.100.100:abc
scp libswscale.so.3 developer@192.168.100.100:abc
scp libv4l* developer@192.168.100.100:abc
scp libswresample.so.1 developer@192.168.100.100:abc
scp libiconv.so.2 developer@192.168.100.100:abc


cp libSDL*  ~/abc
cp libav* ~/abc
cp libswscale.so.3 ~/abc
cp libv4l* ~/abc
cp libswresample.so.1 ~/abc
cp libiconv.so.2 ~/abc

ssh developer@192.168.100.100
su
mount -o remount rw /
cd /data/developer/abc
rm *.a
cp * /usr/lib

mount -o remount rw /&&rpm -e voipVideoService-1.0.0-1.armv7tnhl
